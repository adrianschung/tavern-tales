<!DOCTYPE html>
<html>
  <head>
    <title>TavernTales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h3 style='display:inline-block'><%= link_to 'Tavern Tales', root_path %></h3>
    <h3 style='display:inline-block'><%= link_to 'Maps', maps_path %></h3>
    <% if current_user %>
      <h3 style='display:inline-block; float:right'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></h3>
      <h3 style='display:inline-block; float:right; margin-right: 10px'><%= link_to 'My Profile', user_path(current_user) %></h3>
    <% else %>
      <h3 style='display:inline-block; float:right'><%= link_to 'Sign Up', new_user_registration_path %></h3>
      <h3 style='display:inline-block; float:right; margin-right: 10px'><%= link_to 'Sign In', new_user_session_path %></h3>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
