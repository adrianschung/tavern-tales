<h3>Edit Map</h3>
<%= form_for @map, url: { action: "update" }, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <br />
    <%= f.text_area :description, size: "60x12" %>
  </div>

  <div class="field">
    <%= f.label :picture %>
    <%= f.file_field :picture %>    
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>