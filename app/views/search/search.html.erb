<h1>Posts Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "search", name: nil %>
  </p>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li>
      <h3>
        <%= link_to user.username, controller: "users", action: "show", id: user._id%>
      </h3>
    </li>
  <% end %>
</ul>